
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"         
        android:layout_height="wrap_content">
    <LinearLayout android:layout_width="fill_parent"         
        android:layout_height="wrap_content" android:background="@drawable/im_main_item_bg" android:layout_marginTop="5dip" android:layout_marginBottom="5dip" android:layout_marginLeft="5dip" android:layout_marginRight="5dip">
        
        <ImageView
            android:id="@+id/img_Avatar"
            android:layout_width="73dip"
            android:layout_height="73dip"
            android:src="@drawable/avatar" android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_marginLeft="5dip" android:layout_weight="1">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Live show che linh 30 Nam  Live show che linh 30 Nam  Live show che linh 30 Nam" android:textStyle="bold" android:textColor="#10929f" android:textSize="14dip" android:maxLines="1"/>

            <TextView
                android:id="@+id/txtDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tai trung tam hoi nghi quoc gia vao ngay  Live show che linh 30 Nam" android:textColor="#b3b3b3" android:textSize="14dip" android:maxLines="2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@drawable/ic_show_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_show_details" android:layout_gravity="center_vertical|center_horizontal"/>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    