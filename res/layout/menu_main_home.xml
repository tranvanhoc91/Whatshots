<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@color/BACK_GROUND_FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_textbox_menu"
        android:paddingLeft="7dip"
        android:paddingRight="7dip" android:clickable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.61"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btn_Search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.61" android:src="@drawable/ic_menu_search"/>

            <EditText
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.61"
                android:ems="10"
                android:fadingEdge="vertical"
                android:hint="Tìm kiếm" android:textSize="15dip"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="52dip"
            android:layout_height="52dip"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:text="Quốc Việt" android:layout_gravity="top" android:textStyle="bold" android:textColor="@color/WHITE_COLOR"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="10dip" android:background="@drawable/ic_menu_bg_separator">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sự kiện" android:textStyle="bold" android:textColor="@color/WHITE_COLOR"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:src="@drawable/ic_menu_quantam" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:text="Quan tâm" android:layout_gravity="center_vertical" android:textColor="@color/WHITE_COLOR"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/ImageView02"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:src="@drawable/ic_menu_danghot" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="Đang hot" android:textColor="@color/WHITE_COLOR"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/ImageView03"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:src="@drawable/ic_menu_thethao" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="Thể thao" android:textColor="@color/WHITE_COLOR"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/ImageView04"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:src="@drawable/ic_menu_giaitri" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:paddingLeft="10dip"
            android:text="Âm nhạc" android:textColor="@color/WHITE_COLOR"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/ImageView05"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:src="@drawable/ic_menu_giaitri" />

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="Van hoa"
            android:textColor="@color/WHITE_COLOR" />
    </LinearLayout>

</LinearLayout>